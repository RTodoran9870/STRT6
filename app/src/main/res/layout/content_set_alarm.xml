            android:text="07:58"
            android:textSize="60sp"
            android:lineHeight="70sp"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="@+id/SetHourID"
            app:layout_constraintEnd_toEndOf="@+id/SetHourID"
